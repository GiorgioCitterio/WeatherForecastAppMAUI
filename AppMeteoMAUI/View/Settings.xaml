<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMeteoMAUI.View.Settings"
             xmlns:viewModel="clr-namespace:AppMeteoMAUI.ViewModel"
             Title="Impostazioni"
             BackgroundColor="{StaticResource Primary}">
    <ContentPage.BindingContext>
        <viewModel:SettingsViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ControlTemplate x:Key="RadioButtonTemplate">
            <Border Stroke="#F3F2F1"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="#F3F2F1"
                    HeightRequest="90"
                    WidthRequest="90"
                    HorizontalOptions="Start"
                    VerticalOptions="Start">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CheckedStates">
                            <VisualState x:Name="Checked">
                                <VisualState.Setters>
                                    <Setter Property="Stroke"
                                            Value="#FF3300" />
                                    <Setter TargetName="check"
                                            Property="Opacity"
                                            Value="1" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Unchecked">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor"
                                            Value="#F3F2F1" />
                                    <Setter Property="Stroke"
                                            Value="#F3F2F1" />
                                    <Setter TargetName="check"
                                            Property="Opacity"
                                            Value="0" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </VisualStateManager.VisualStateGroups>
                <Grid Margin="4"
                      WidthRequest="90">
                    <Grid Margin="0,0,4,0"
                          WidthRequest="18"
                          HeightRequest="18"
                          HorizontalOptions="End"
                          VerticalOptions="Start">
                        <Ellipse Stroke="Blue"
                                 Fill="White"
                                 WidthRequest="16"
                                 HeightRequest="16"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                        <Ellipse x:Name="check"
                                 Fill="Blue"
                                 WidthRequest="8"
                                 HeightRequest="8"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center" />
                    </Grid>
                    <ContentPresenter />
                </Grid>
            </Border>
        </ControlTemplate>

        <Style TargetType="RadioButton">
            <Setter Property="ControlTemplate"
                    Value="{StaticResource RadioButtonTemplate}" />
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label
            Text="ðŸ§‘â€ðŸ”§âš™ï¸Impostazioniâš™ï¸ðŸ§‘â€ðŸ”§"
            Style="{StaticResource LabelImpostazioni}"/>
        <Button
            Text="Cambia posizione predefinita"
            Command="{Binding CambiaPosizionePredefinitaCommand}"
            Style="{StaticResource ButtonImp}"/>
        <StackLayout>
            <Label Text="All'avvio mostra:"/>
            <StackLayout RadioButtonGroup.GroupName="preferencesPosPredefinita"
                         Orientation="Horizontal">
                <RadioButton
                    Value="Posizione predefinita"
                    x:Name="posPred"
                    TextColor="{StaticResource LightBackground}"
                    IsChecked="{Binding PosPredStatus}"
                    CheckedChanged="pos_CheckedChanged">
                    <RadioButton.Content>
                        <StackLayout>
                            <Image Source="cloud_local.png"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                            <Label Text="Posizione predefinita"
                           HorizontalOptions="Center"
                           VerticalOptions="End" />
                        </StackLayout>
                    </RadioButton.Content>
                </RadioButton>
                <RadioButton
                    Value="Posizione corrente"
                    x:Name="posCorr"
                    TextColor="{StaticResource LightBackground}"
                    IsChecked="{Binding PosCorrStatus}"
                    CheckedChanged="pos_CheckedChanged">
                    <RadioButton.Content>
                        <StackLayout>
                            <Image Source="mirino.svg"
                                   WidthRequest="10"
                                   HeightRequest="10"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                            <Label Text="Posizione corrente"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End" />
                        </StackLayout>
                    </RadioButton.Content>
                </RadioButton>
            </StackLayout>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>